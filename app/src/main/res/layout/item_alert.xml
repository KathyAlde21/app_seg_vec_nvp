<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Indicador de color (izquierda) -->
        <View
            android:id="@+id/colorIndicator"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:background="@color/emergency_medical" />

        <!-- Contenido -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Tipo de emergencia -->
            <TextView
                android:id="@+id/tvAlertType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emergencia Médica"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Fecha y hora -->
            <TextView
                android:id="@+id/tvAlertDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="18/11/2025 - 14:30"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <!-- Ubicación -->
            <TextView
                android:id="@+id/tvAlertLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Lat: -33.4489, Long: -70.6693"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />

            <!-- Estado -->
            <TextView
                android:id="@+id/tvAlertStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/emergency_access"
                android:padding="4dp"
                android:text="Activa"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>